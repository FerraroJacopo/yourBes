<% if user_signed_in? %>
  <%= link_to "Profilo", edit_user_registration_path %> |
  
  <%= link_to "Esci", destroy_user_session_path, method: :delete  %>
<% else %>
  <%= link_to "Registrati", new_user_registration_path  %> |
  <%= link_to "Accedi", new_user_session_path  %>
<% end %>
 

<h1> Lista città </h1>

<table border=1 width="20%" >
	<thead>
		<th>Città</th> 
	</thead>
	
	<tbody>
		<% @citta.each do |c|  %>
			<tr>
				<td>
					<%= link_to c.nomecity, 
					  :controller => "locali", 
					  :action => "index", 
					  :citta => c.nomecity %>
				</td>
			</tr>
		<% end %>
	</tbody>

</table>	